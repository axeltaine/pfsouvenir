{% extends 'base.html.twig' %}
{% block title %}Pompe Funebres Le Souvenir{% endblock %}
{% block stylesheets %}
<link href="{{ asset('/css/login.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
<main class="global col-sm-12">
    <div class="container">
        <center>
            <img src="img/OC1Y7T0test.png" alt="logo" style="max-height: 10em;">
        </center>
        <h1 class="text-center text-dark">PF Le Souvenir<h1>
        <h3 class="text-center text-dark">espace connexion<h3>
    </div>
    {# START CONNECT FORM #}
           <form action="{{ path('security_login') }}" method="post" class="form-signin">
                <fieldset>
                    <legend><i class="fa fa-lock" aria-hidden="true"></i> Connexion</legend>
                    <div class="form-group">
                        <label for="username">Identifiant</label>
                        <input placeholder="Adresse email ..." required name="_username" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                         <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                    <button type="submit" class="btn btn-secondary">
                        <i class="fa fa-sign-in" aria-hidden="true"></i> Connexion
                    </button>
                </fieldset>
            </form>
    {# END CONNECT FORM #}
</main>
{% endblock %}